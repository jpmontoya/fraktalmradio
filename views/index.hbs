        <audio id="player" src="https://node-11.zeno.fm:443/2xamg6gu88quv"></audio>

        <script>
            var myAudio = document.getElementById("player");
            var isPlaying = false;
            var icon_play = document.getElementById("iconPlay");

            function togglePlay() {
                if (isPlaying) {
                    myAudio.pause();

                } else {
                    document.getElementById("player").load();
                    //document.getElementById("someshit").innerHTML = document.getElementById("player").volume;
                    myAudio.play();
                }
            };

            function lowVolumn() {
                document.getElementById('player').volume -= 0.1;
            }

            function highVolumn() {
                document.getElementById('player').volume += 0.1;
            }

            myAudio.onplaying = function () {
                isPlaying = true;
                icon_play.className = "fas fa-pause";
            };
            myAudio.onpause = function () {
                isPlaying = false;
                icon_play.className = "fas fa-play";
            };
        </script>
